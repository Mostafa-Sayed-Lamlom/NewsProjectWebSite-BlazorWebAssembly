@page "/categories"  
<PageTitle>Categories</PageTitle>

@if (_categories == null)
{
    <span class="loader"></span>
}
else
{
<div class="card">
    <div class="card-header">
        <h3>Categories List <a href="NewCategory" class="float-end"><h5 class="btn btn-primary">New Category</h5></a></h3>
    </div>
    <div class="card-body">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Category Id
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Update
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categore in _categories)
                {
                    <tr>
                        <td>@categore.Id</td>
                        <td>@categore.CategoryName</td>
                        <td><a class="btn btn-info" href="/UpdateCategory/@categore.Id">Update</a></td>
                        <td><button type="button" class="btn btn-danger"  @onclick="()=>DeleteCat(categore.Id)">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>}